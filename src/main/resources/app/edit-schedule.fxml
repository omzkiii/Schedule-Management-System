            <Label fx:id="editSched" styleClass="label-dialog" text="Ex. ID" GridPane.columnIndex="1">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </GridPane>
   </content>
   <buttonTypes>
      <ButtonType fx:constant="OK" />
      <ButtonType fx:constant="CANCEL" />
   </buttonTypes>
   <header>
      <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="38.0" prefWidth="353.0" styleClass="edit-headers" text="Edit Schedule">
         <font>
            <Font size="15.0" />
         </font>
      </Label>
   </header>
