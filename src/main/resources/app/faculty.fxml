<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="460.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.AppController">
   <children>
      <VBox alignment="CENTER" prefHeight="55.0" prefWidth="458.0">
         <children>
              <Label styleClass="subpane-headers" text="Faculty" textAlignment="CENTER">
                  <font>
                      <Font name="Kristen ITC" size="25.0" />
                  </font>
               <graphic>
                  <ImageView fitHeight="36.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/user.png" />
                     </image>
                  </ImageView>
               </graphic>
              </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER_LEFT" prefHeight="42.0" prefWidth="460.0">
         <children>
              <Button fx:id="addFacultyButton" mnemonicParsing="false" onAction="#openAddFacultyDialog" prefHeight="30.0" prefWidth="125.0" styleClass="button-54" text="Add Faculty">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
               <font>
                  <Font name="Kristen ITC" size="12.0" />
               </font>
               <graphic>
                  <ImageView fitHeight="19.0" fitWidth="19.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../Images/user-add.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </VBox>
      <VBox prefHeight="650.0" prefWidth="460.0">
         <children>
              <TableView fx:id="facList" prefHeight="650.0" prefWidth="450.0" stylesheets="@style.css">
                  <columns>
                      <TableColumn prefWidth="75.0" text="Employee No." />
      
                      <TableColumn prefWidth="75.0" text="Name" />
                      <TableColumn prefWidth="75.0" text="Current Load" />
      
                      <TableColumn prefWidth="75.0" text="Max Load" />
      
      
                      <TableColumn prefWidth="75.0" text="Actions" />
      
      
                  </columns>
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
               <VBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" />
               </VBox.margin>
              </TableView>
         </children>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </VBox>
   </children>
</VBox>
